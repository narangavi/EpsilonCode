<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Detailed Systems"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <general
                jcr:primaryType="nt:unstructured"
                jcr:title="General"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Title"
                                name="./title"
                                required="{Boolean}true"/>
                            <cta1
                                jcr:primaryType="nt:unstructured"
                                jcr:title="The first CTA"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                title="The first CTA">
                                <items jcr:primaryType="nt:unstructured">
                                    <titleCTA
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Title"
                                        name="./ctaTitle"/>
                                    <link
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Link"
                                        name="./ctaLink"
                                        rootPath="/content/calix"/>
                                    <btnType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldLabel="Button Type"
                                        name="./btnType"
                                        value="green">
                                        <items jcr:primaryType="nt:unstructured">
                                            <green
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary Green"
                                                value="green"/>
                                            <white
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary White"
                                                value="white"/>
                                            <outline
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary Outline"
                                                value="outline"/>
                                            <textlink
                                                jcr:primaryType="nt:unstructured"
                                                text="Text Link"
                                                value="text"/>
                                        </items>
                                    </btnType>
                                </items>
                            </cta1>
                            <cta2
                                jcr:primaryType="nt:unstructured"
                                jcr:title="The second CTA"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                title="The second CTA">
                                <items jcr:primaryType="nt:unstructured">
                                    <titleCTA
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Title"
                                        name="./titleCTA2"/>
                                    <link
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Link"
                                        name="./linkCTA2"
                                        rootPath="/content/calix"/>
                                    <btnType
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/select"
                                        fieldLabel="Button Type"
                                        name="./btnType2"
                                        value="green">
                                        <items jcr:primaryType="nt:unstructured">
                                            <green
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary Green"
                                                value="green"/>
                                            <white
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary White"
                                                value="white"/>
                                            <outline
                                                jcr:primaryType="nt:unstructured"
                                                text="Primary Outline"
                                                value="outline"/>
                                            <textlink
                                                jcr:primaryType="nt:unstructured"
                                                text="Text Link"
                                                value="text"/>
                                        </items>
                                    </btnType>
                                </items>
                            </cta2>
                        </items>
                    </columns>
                </items>
            </general>
            <col1
                jcr:primaryType="nt:unstructured"
                jcr:title="Image Area"
                sling:resourceType="granite/ui/components/foundation/container"
                id="genericTab1">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <listFrom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/select"
                                fieldLabel="Content Type"
                                name="./type1"
                                value="image1">
                                <items jcr:primaryType="nt:unstructured">
                                    <image1
                                        jcr:primaryType="nt:unstructured"
                                        text="Image"
                                        value="image1"/>
                                    <video1
                                        jcr:primaryType="nt:unstructured"
                                        text="Video"
                                        value="video1"/>
                                    <videos1
                                        jcr:primaryType="nt:unstructured"
                                        text="Video Library"
                                        value="videos1"/>
                                    <text1
                                        jcr:primaryType="nt:unstructured"
                                        text="Text (Not applicable)"
                                        value="text1"/>
                                </items>
                            </listFrom>
                            <image1
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Image"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                id="image1"
                                title="Image">
                                <items jcr:primaryType="nt:unstructured">
                                    <path
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Image Path"
                                        name="./image1"
                                        rootPath="/content/dam"/>
                                </items>
                            </image1>
                            <video1
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Video"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                id="video1"
                                title="Video">
                                <items jcr:primaryType="nt:unstructured">
                                    <path
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Video Path"
                                        name="./video1"
                                        rootPath="/content/calix"/>
                                </items>
                            </video1>
                            <videos1
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Please add video(s) in video libary component"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                id="videos1"
                                rootPath="/content/calix/en/site/video"
                                title="Please add video(s) in video libary component">
                                <items jcr:primaryType="nt:unstructured"/>
                            </videos1>
                            <text1
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Text - Please disregard. This does not apply to the Detailed Systems component"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                id="text1"
                                title="Text - Please disregard. This does not apply to the Detailed Systems component"/>
                        </items>
                    </columns>
                </items>
            </col1>
            <col2
                jcr:primaryType="nt:unstructured"
                jcr:title="Links Col1"
                sling:resourceType="granite/ui/components/foundation/container"
                id="genericTab2">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <linksHeading
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Product Links Heading"
                                name="./linksHeading"/>
                            <fieldset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linkItems
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                class="full-width"
                                                fieldLabel="Product Link Items">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                    eaem-nested=""
                                                    name="./linkItem">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                        method="absolute"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <linkText
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldLabel="Product Link Text"
                                                                    name="./linkText"
                                                                    rootPath="/content/calix"/>
                                                                <linkURL
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                                    fieldLabel="Product Link URL"
                                                                    name="./path"
                                                                    rootPath="/content/calix"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </linkItems>
                                        </items>
                                    </column>
                                </items>
                            </fieldset>
                        </items>
                    </columns>
                </items>
            </col2>
            <col3
                jcr:primaryType="nt:unstructured"
                jcr:title="Links Col2"
                sling:resourceType="granite/ui/components/foundation/container"
                id="genericTab3">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <fieldset
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset">
                                <layout
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <linkItems2
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/multifield"
                                                class="full-width"
                                                fieldLabel="Product Link Items">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                                    eaem-nested=""
                                                    name="./linkItem2">
                                                    <layout
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                        method="absolute"/>
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <column
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <linkText2
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                                                    fieldLabel="Product Link Text"
                                                                    name="./linkText2"
                                                                    rootPath="/content/calix"/>
                                                                <linkURL2
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                                                    fieldLabel="Product Link URL"
                                                                    name="./path2"
                                                                    rootPath="/content/calix"/>
                                                            </items>
                                                        </column>
                                                    </items>
                                                </field>
                                            </linkItems2>
                                        </items>
                                    </column>
                                </items>
                            </fieldset>
                        </items>
                    </columns>
                </items>
            </col3>
        </items>
    </content>
</jcr:root>
