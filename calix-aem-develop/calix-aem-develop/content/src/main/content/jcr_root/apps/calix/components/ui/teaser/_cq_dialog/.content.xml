<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Teaser Dialog"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <teaser
                jcr:primaryType="nt:unstructured"
                jcr:title="Teaser"
                sling:resourceType="granite/ui/components/foundation/container">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns 
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <teasertitle
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                fieldLabel="Section Title"
                                name="./title"
                                required="true"/>
                            <displayCurveTop
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./displaycurvetop"
                                text="Display Curve Top"
                                value="{Boolean}true"/>
                            <displaycurvetop-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./displaycurvetop@Delete"
                                value="{Boolean}true"/>
                            <displayCurveBottom
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./displaycurvebottom"
                                text="Display Curve Bottom"
                                value="{Boolean}true"/>
                            <displaycurvebottom-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./displaycurvebottom@Delete"
                                value="{Boolean}true"/>
                            <primaryTeaser
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Teaser 1"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                title="Teaser 1">
                                <items jcr:primaryType="nt:unstructured">
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        fieldDescription="Drop image from the Asset Browser"
										sling:resourceType="calix/foundation/form/imagedropfield"
                                        fieldLabel="Image"
                                        name="./image1"
                                        rootPath="/content/dam"/>
                                    <teaserTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Teaser Title"
                                        name="./teaserTitle1"
                                        isRequired="true"
                                        required="{Boolean}false"/>
                                    <teaserCopy
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textarea"
                                        fieldLabel="Teaser Copy"
                                        name="./teaserCopy1"
                                        isRequired="true"
                                        required="{Boolean}false"/>
                                    <titleCTA
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Teaser CTA label"
                                        name="./titleCTA1"/>
                                    <linkCTA
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Teaser CTA url"
                                        name="./linkCTA1"
                                        rootPath="/content/calix"/>
                                </items>
                            </primaryTeaser>
                            <secondTeaser
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Teaser 2"
                                sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                title="Teaser 2">
                                <items jcr:primaryType="nt:unstructured">
                                    <image
                                        jcr:primaryType="nt:unstructured"
                                        fieldDescription="Drop image from the Asset Browser"
										sling:resourceType="calix/foundation/form/imagedropfield"
                                        fieldLabel="Image"
                                        name="./image2"
                                        rootPath="/content/dam"/>
                                    <teaserTitle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Teaser Title"
                                        name="./teaserTitle2"
                                        isRequired="true"
                                        required="{Boolean}false"/>
                                    <teaserCopy
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textarea"
                                        fieldLabel="Teaser Copy"
                                        name="./teaserCopy2"
                                        isRequired="true"
                                        required="{Boolean}false"/>
                                    <titleCTA
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/textfield"
                                        fieldLabel="Teaser CTA label"
                                        name="./titleCTA2"/>
                                    <linkCTA
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                        fieldLabel="Teaser CTA url"
                                        name="./linkCTA2"
                                        rootPath="/content/calix"/>
                                </items>
                            </secondTeaser>
                        </items>
                    </columns>
                </items>
            </teaser>
        </items>
    </content>
</jcr:root>
