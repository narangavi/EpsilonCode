<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Image With Text Below"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Carousel">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/tabs"
            type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                jcr:title="Layout"
                sling:resourceType="granite/ui/components/foundation/section">
                <layout
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <column
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <displayTopCurves
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./displayTopCurves"
                                text="Display Top Curve"
                                value="{Boolean}true"/>
                            <displaytopcurves-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./displayTopCurves@Delete"
                                value="{Boolean}true"/>
                            <displayBottomCurves
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                name="./displayBottomCurves"
                                text="Display Bottom Curve"
                                value="{Boolean}true"/>
                            <displaybottomcurves-delete
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/hidden"
                                name="./displayBottomCurves@Delete"
                                value="{Boolean}true"/>
							<title
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/textfield"
                                name="./title"
                                fieldLabel="Title"/>
							<columnStyle
								jcr:primaryType="nt:unstructured"
								sling:resourceType="granite/ui/components/foundation/form/select"
								fieldLabel="Column Style"
								name="./columnLayout"
								value="threeColumns">
								<items jcr:primaryType="nt:unstructured">
									<narrow
										jcr:primaryType="nt:unstructured"
										text="Narrow"
										value="threeColumns"/>
									<wide
										jcr:primaryType="nt:unstructured"
										text="Wide"
										value="twoColumns"/>
								</items>
							</columnStyle>
                            <numOfItems
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                defaultValue="1"
                                name="./numOfItems"
                                fieldLabel="Number of items"/>
                        </items>
                    </column>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
