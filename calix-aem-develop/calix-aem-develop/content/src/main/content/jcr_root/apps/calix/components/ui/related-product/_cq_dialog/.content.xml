<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Related Products"
    sling:resourceType="cq/gui/components/authoring/dialog"
    helpPath="en/cq/current/wcm/default_components.html#Text">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <layout
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <fieldset
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Related Products"
                        sling:resourceType="granite/ui/components/foundation/form/fieldset">
                        <layout
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <displayBG
	                                    jcr:primaryType="nt:unstructured"
	                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
	                                    name="./displayBG"
	                                    text="Display Background"
	                                    value="{Boolean}true" />
									 <displaybg-delete
	                                    jcr:primaryType="nt:unstructured"
	                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
	                                    name="./displayBG@Delete"
	                                    value="{Boolean}true"/>
		                            <displayTopCurve
		                                    jcr:primaryType="nt:unstructured"
		                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
		                                    name="./displayTopCurve"
		                                    text="Display Top Curve"
		                                    value="{Boolean}true" />
		                            <displaytopcurve-delete
		                                    jcr:primaryType="nt:unstructured"
		                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
		                                    name="./displayTopCurve@Delete"
		                                    value="{Boolean}true"/>
		                            <displayBottomCurve
		                                    jcr:primaryType="nt:unstructured"
		                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
		                                    name="./displayBottomCurve"
		                                    text="Display Bottom Curve"
		                                    value="{Boolean}true"/>
		                            <displaybottomcurve-delete
		                                    jcr:primaryType="nt:unstructured"
		                                    sling:resourceType="granite/ui/components/foundation/form/hidden"
		                                    name="./displayBottomCurve@Delete"
		                                    value="{Boolean}true"/>
		                            <dashboard
											jcr:primaryType="nt:unstructured"
											sling:resourceType="granite/ui/components/foundation/form/textfield"
											fieldDescription="Enter Title Name"
											required="{Boolean}true"
											isRequired="true"
											fieldLabel="Title"
											name="./titleDashboad"/>
                                    <listItems
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/foundation/form/multifield"
                                        class="full-width"
                                        fieldDescription="Click '+' to add a new product"
                                        fieldLabel="Products">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/foundation/form/fieldset"
                                            eaem-nested=""
                                            name="./products">
                                            <layout
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"
                                                method="absolute"/>
                                            <items jcr:primaryType="nt:unstructured">
                                                <column
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/container">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <title
															jcr:primaryType="nt:unstructured"
		                                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
		                                                    fieldDescription="Title"
		                                                    fieldLabel="Title"
		                                                    name="./title"/>
			                                            <imagePath
			                                                jcr:primaryType="nt:unstructured"
			                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
			                                                fieldDescription="Select Path"
			                                                fieldLabel="Image Path"
			                                                name="./imagePath"
			                                                rootPath="/content/dam"/>
			                                            <description
			                                            	jcr:primaryType="nt:unstructured"
			                                                sling:resourceType="granite/ui/components/foundation/form/textarea"
			                                                fieldLabel=" Description "
			                                                name="./description"/>
			                                            <path
			                                            	jcr:primaryType="nt:unstructured"
			                                                sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
			                                                fieldLabel="Path"
			                                                name="./path"
			                                                rootPath="/content/calix"/>
                                                    </items>
                                                </column>
                                            </items>
                                        </field>
                                    </listItems>
                                </items>
                            </column>
                        </items>
                    </fieldset>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
