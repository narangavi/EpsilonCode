<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="nt:unstructured"
          jcr:title="Press Release/ Article Page "
          sling:resourceType="cq/gui/components/authoring/dialog">
    <content
            jcr:primaryType="nt:unstructured"
            sling:resourceType="granite/ui/components/foundation/container">
        <layout
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/layouts/tabs"
                type="nav"/>
        <items jcr:primaryType="nt:unstructured">
            <tab1
                    jcr:primaryType="nt:unstructured"
                    jcr:title="General"
                    sling:resourceType="granite/ui/components/foundation/container">
                <layout
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/foundation/layouts/fixedcolumns"/>
                <items jcr:primaryType="nt:unstructured">
                    <columns
                            jcr:primaryType="nt:unstructured"
                            sling:resourceType="granite/ui/components/foundation/container">
                        <items jcr:primaryType="nt:unstructured">


                            <contentType
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldDescription="Content Type"
                                    fieldLabel="Content Type "
                                    name="./contentType"
                                    value="speaker">
                                <items jcr:primaryType="nt:unstructured">
                                    <event
                                            jcr:primaryType="nt:unstructured"
                                            text="Press"
                                            value="press"/>
                                    <speaker
                                            jcr:primaryType="nt:unstructured"
                                            text="News"
                                            value="news"/>

                                </items>
                            </contentType>

                            <title
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="Enter Title Name"
                                    required="{Boolean}true"
                                    isRequired="true"
                                    fieldLabel="Title"
                                    name="./title"/>

                            <date
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/datepicker"
                                    fieldDescription="Enter Date format XX/XX/XXXX"
                                    required="{Boolean}true"
                                    isRequired="true"
                                    fieldLabel="Date"
                                    type="date"
                                    displayedFormat = "MM/DD/YYYY"
                                    name="./date"/>

                            <name
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="News source"
                                    fieldLabel="News source"
                                    name="./name"/>

                            <description
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="Description"
                                    fieldLabel="Description"
                                    name="./description"/>

                            <eventLocation
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldDescription="Enter Event Location"
                                    fieldLabel="Event Location"
                                    name="./eventLocation"/>

                            <linkLabel
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="Link Label"
                                    name="./linkLabel" />

                            <link
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="External Link"
                                    name="./link" />

                            <mainImage
                                    jcr:primaryType="nt:unstructured"
                                    fieldLabel="Main image"
                                    fieldDescription="Drop main image from the Asset Browser"
                                    sling:resourceType="calix/foundation/form/imagedropfield"
                                    name="./mainImage"/>

                            <!--headImage
                                    jcr:primaryType="nt:unstructured"
                                    fieldLabel="Speaker Headshot"
                                    fieldDescription="Drop header image from the Asset Browser"
                                    sling:resourceType="calix/foundation/form/imagedropfield"
                                    name="./headImage"/-->

                            <content
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textarea"
                                    fieldLabel="Page Content"
                                    name="./content"/>

                            <maxArticle
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/numberfield"
                                    fieldDescription="Number of current items displayed in the right column"
									defaultValue="5"
                                    fieldLabel="Current items count"
                                    name="./maxArticle"/>

                            <titleCTA
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/textfield"
                                    fieldLabel="CTA label"
                                    name="./titleCTA"/>
                            <linkCTA
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/pathbrowser"
                                    fieldLabel="CTA url"
                                    name="./linkCTA"
                                    rootPath="/content/calix"/>

                            <btnType
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/foundation/form/select"
                                    fieldLabel="CTA Button Type"
                                    name="./buttonType"
                                    value="green">
                                <items jcr:primaryType="nt:unstructured">
                                    <green
                                            jcr:primaryType="nt:unstructured"
                                            text="Primary Green"
                                            value="green"/>
                                    <white
                                            jcr:primaryType="nt:unstructured"
                                            text="Primary White"
                                            value="white"/>
                                    <outline
                                            jcr:primaryType="nt:unstructured"
                                            text="Primary Outline"
                                            value="outline"/>
                                    <textlink
                                            jcr:primaryType="nt:unstructured"
                                            text="Text Link"
                                            value="text"/>
                                </items>
                            </btnType>


                        </items>
                    </columns>
                </items>
            </tab1>

        </items>
    </content>
</jcr:root>
