<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
    jcr:primaryType="cq:Dialog"
    activeTab="{Long}0"
    helpPath="en/cq/current/wcm/default_components.html#Text Image"
    xtype="tabpanel">
    <items jcr:primaryType="cq:WidgetCollection">
        <column
            jcr:primaryType="cq:Widget"
            title="Layout"
            xtype="panel">
            <items jcr:primaryType="cq:WidgetCollection">
                <displayTopCurves
                    jcr:primaryType="cq:Widget"
                    defaultValue="false"
                    fieldLabel="Display Top Curve"
                    name="./displayTopCurves"
                    type="checkbox"
                    xtype="selection"/>
                <displayBottomCurves
                    jcr:primaryType="cq:Widget"
                    defaultValue="false"
                    fieldLabel="Display Bottom Curve"
                    name="./displayBottomCurves"
                    type="checkbox"
                    xtype="selection"/>
                <title
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Title"
                    name="./title"
                    xtype="textfield"/>
                <columnStyle
                    jcr:primaryType="cq:Widget"
                    defaultValue="threeColumns"
                    fieldLabel="Column Style"
                    name="./columnLayout"
                    type="select"
                    xtype="selection">
                    <options jcr:primaryType="cq:WidgetCollection">
                        <one
                            jcr:primaryType="nt:unstructured"
                            text="Narrow"
                            value="threeColumns"/>
                        <two
                            jcr:primaryType="nt:unstructured"
                            text="Wide"
                            value="twoColumns"/>
                    </options>
                </columnStyle>
                <number
                    jcr:primaryType="cq:Widget"
                    fieldLabel="Number of items"
                    defaultValue="1"
                    name="./numOfItems"
                    xtype="numberfield"/>
            </items>
        </column>
    </items>
</jcr:root>
